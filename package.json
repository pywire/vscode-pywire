{
  "name": "pywire",
  "displayName": "PyWire",
  "description": "Language support for PyWire files",
  "version": "0.1.0",
  "type": "module",
  "publisher": "pywire",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.cjs",
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "languages": [
      {
        "id": "pywire",
        "aliases": [
          "PyWire",
          "pywire"
        ],
        "extensions": [
          ".wire"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pywire",
        "scopeName": "source.pywire",
        "path": "./syntaxes/pywire.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.python": "python",
          "meta.embedded.inline.python": "python",
          "text.html.basic": "html"
        }
      }
    ],
    "configuration": {
      "title": "PyWire",
      "properties": {
        "pywire.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter"
        },
        "pywire.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        },
        "pywire.useBundledPyright": {
          "type": "boolean",
          "default": false,
          "description": "If true, bypasses Pylance middleware and uses the bundled Pyright from the language server. Useful for testing fallback mode."
        }
      }
    },
    "commands": [
      {
        "command": "pywire.toggleComment",
        "title": "PyWire: Toggle Comment"
      },
      {
        "command": "pywire.restartLanguageServer",
        "title": "PyWire: Restart Language Server"
      }
    ],
    "keybindings": [
      {
        "command": "pywire.toggleComment",
        "key": "cmd+/",
        "mac": "cmd+/",
        "win": "ctrl+/",
        "linux": "ctrl+/",
        "when": "editorTextFocus && editorLangId == pywire"
      }
    ],
    "configurationDefaults": {
      "[pywire]": {
        "editor.defaultFormatter": "pywire.pywire",
        "editor.formatOnSave": true
      },
      "emmet.includeLanguages": {
        "pywire": "html"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run bundle-deps && pnpm run package",
    "compile": "pnpm run check-types && node build.js",
    "watch": "concurrently \"pnpm run watch:esbuild\" \"pnpm run watch:tsc\"",
    "watch:esbuild": "node build.js --watch",
    "watch:tsc": "tsc --noEmit --watch -p ./",
    "package": "pnpm run check-types && node build.js --production",
    "vsix": "pnpm run vscode:prepublish && npx @vscode/vsce package --no-dependencies",
    "check-types": "tsc --noEmit -p ./",
    "bundle-deps": "./scripts/bundle-deps",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm check-types",
    "coverage": "echo \"No coverage configured\"",
    "check": "pnpm format:check && pnpm lint && pnpm check-types"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vscode/vsce": "^2.22.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-pywire": "git+https://github.com/pywire/prettier-plugin-pywire.git",
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.26.3"
  }
}
