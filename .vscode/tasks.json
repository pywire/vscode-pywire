{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch:esbuild",
            "problemMatcher": {
                "owner": "esbuild",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^âœ˜ \\[ERROR\\] (.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "^    (.*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "loop": true
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[watch\\] build started",
                    "endsPattern": "^\\[watch\\] build finished"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "npm: watch:esbuild"
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [],
            "label": "npm: watch-all"
        }
    ]
}