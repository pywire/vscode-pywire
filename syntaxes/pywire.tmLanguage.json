{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PyWire",
  "scopeName": "source.pywire",
  "patterns": [
    {
      "include": "#python-header"
    },
    {
      "include": "#separator"
    },
    {
      "include": "#html-content"
    }
  ],
  "repository": {
    "python-header": {
      "begin": "\\A(?!\\s*<[!a-zA-Z/])",
      "end": "^(?=\\s*---+\\s*html\\s*---+\\s*$)|^(?=[ \\t]*<[!a-zA-Z/])",
      "contentName": "meta.embedded.block.python",
      "patterns": [
        {
          "include": "#directives"
        },
        {
          "include": "#wire-variable"
        },
        {
          "include": "source.python"
        }
      ]
    },
    "separator": {
      "match": "^\\s*(-{3,})\\s*[Hh][Tt][Mm][Ll]\\s*\\1\\s*$",
      "name": "punctuation.separator.pywire keyword.control.pywire"
    },
    "html-content": {
      "patterns": [
        {
          "include": "#directives"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#control-flow"
        },
        {
          "include": "#tags"
        },
        {
          "include": "#interpolation"
        },
        {
          "include": "#text"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "^\\s*(!\\w+)",
          "name": "keyword.control.directive.pywire"
        },
        {
          "begin": "(!path)\\s*(\\{)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.directive.pywire"
            },
            "2": {
              "name": "punctuation.section.embedded.begin.pywire"
            }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.embedded.end.pywire"
            }
          },
          "contentName": "meta.embedded.block.python",
          "patterns": [
            {
              "include": "#wire-variable"
            },
            {
              "include": "source.python"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "begin": "<!--",
          "end": "-->",
          "name": "comment.block.html"
        },
        {
          "match": "^\\s*#.*$",
          "name": "comment.line.number-sign.python"
        }
      ]
    },
    "interpolation": {
      "begin": "\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.embedded.begin.pywire"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.embedded.end.pywire"
        }
      },
      "contentName": "meta.embedded.inline.python",
      "patterns": [
        {
          "include": "#wire-variable"
        },
        {
          "include": "source.python"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "include": "#tags-void"
        },
        {
          "include": "#tags-general"
        }
      ]
    },
    "tags-void": {
      "begin": "(<)(area|base|br|col|embed|hr|img|input|link|meta|param|source|track|wbr)(?=\\s|/?>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        }
      },
      "end": "/?>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "name": "meta.tag.void.html",
      "patterns": [
        {
          "include": "#attributes"
        }
      ]
    },
    "tags-general": {
      "begin": "(<)([^/\\s>/]*)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        }
      },
      "end": "(/?>)",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.html"
        }
      },
      "patterns": [
        {
          "include": "#attributes"
        }
      ]
    },
    "tags-end": {
      "match": "(</)([^/\\s>]*)(\\>)",
      "captures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        },
        "3": {
          "name": "punctuation.definition.tag.end.html"
        }
      }
    },
    "attributes": {
      "patterns": [
        {
          "include": "#attribute-event"
        },
        {
          "include": "#attribute-directive"
        },
        {
          "include": "#attribute-normal"
        }
      ]
    },
    "attribute-event": {
      "begin": "(@[\\w\\.]+)(?=\\s*=?|/?>)",
      "beginCaptures": {
        "1": {
          "name": "entity.other.attribute-name.event.pywire support.function.event.pywire"
        }
      },
      "end": "(?=[\\s/>])",
      "patterns": [
        {
          "include": "#attribute-value-assignment"
        }
      ]
    },
    "attribute-directive": {
      "begin": "(\\$[\\w\\.]+)(?=\\s*=?|/?>)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.directive.attribute.pywire"
        }
      },
      "end": "(?=[\\s/>])",
      "patterns": [
        {
          "include": "#attribute-value-assignment"
        }
      ]
    },
    "attribute-normal": {
      "begin": "([^\\s\"'=<>`/]+)",
      "beginCaptures": {
        "1": {
          "name": "entity.other.attribute-name.html"
        }
      },
      "end": "(?=[\\s/>])",
      "patterns": [
        {
          "include": "#attribute-value-assignment"
        }
      ]
    },
    "attribute-value-assignment": {
      "begin": "=",
      "beginCaptures": {
        "0": {
          "name": "punctuation.separator.key-value.html"
        }
      },
      "end": "(?=[\\s/>])",
      "patterns": [
        {
          "include": "#interpolation"
        },
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.html",
          "patterns": [
            {
              "include": "#interpolation"
            }
          ]
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.html",
          "patterns": [
            {
              "include": "#interpolation"
            }
          ]
        },
        {
          "match": "[^\\s\"'=<>`/]+",
          "name": "string.unquoted.html"
        }
      ]
    },
    "text": {
      "patterns": [
        {
          "include": "#tags-end"
        }
      ]
    },
    "wire-variable": {
      "match": "(\\$)([a-zA-Z_]\\w*)",
      "captures": {
        "1": {
          "name": "punctuation.definition.variable.pywire keyword.operator.pywire"
        },
        "2": {
          "name": "variable.other.readwrite.pywire"
        }
      }
    },
    "control-flow": {
      "patterns": [
        {
          "name": "meta.control-flow.pywire",
          "begin": "(\\{)(\\$)(if|elif|else|for|await|then|catch|try|except|finally|html)\\b",
          "beginCaptures": {
            "1": {
              "name": "punctuation.section.embedded.begin.pywire"
            },
            "2": {
              "name": "keyword.control.pywire"
            },
            "3": {
              "name": "keyword.control.pywire"
            }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.embedded.end.pywire"
            }
          },
          "contentName": "meta.embedded.inline.python",
          "patterns": [
            {
              "include": "#wire-variable"
            },
            {
              "include": "source.python"
            }
          ]
        },
        {
          "name": "meta.control-flow.end.pywire",
          "match": "(\\{)(/)(if|for|await|try)(\\})",
          "captures": {
            "1": {
              "name": "punctuation.section.embedded.begin.pywire"
            },
            "2": {
              "name": "keyword.control.pywire"
            },
            "3": {
              "name": "keyword.control.pywire"
            },
            "4": {
              "name": "punctuation.section.embedded.end.pywire"
            }
          }
        }
      ]
    }
  }
}